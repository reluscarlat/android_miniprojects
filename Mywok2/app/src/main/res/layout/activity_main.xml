<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/numbers_button"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#FB8C00"
        android:gravity="center_horizontal"
        android:padding="30dp"
        android:text="Numbers"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/family_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/phrases_button"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#039BE5"
        android:gravity="center_horizontal"
        android:padding="30dp"
        android:text="Phrases"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colors_button" />

    <TextView
        android:id="@+id/colors_button"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#8E24AA"
        android:gravity="center_horizontal"
        android:padding="30dp"
        android:text="Colors"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/phrases_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/family_button" />

    <TextView
        android:id="@+id/family_button"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#FF43A047"
        android:gravity="center_horizontal"
        android:padding="30dp"
        android:text="Family"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/colors_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numbers_button" />

</androidx.constraintlayout.widget.ConstraintLayout>